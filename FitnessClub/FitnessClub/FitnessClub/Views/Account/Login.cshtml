@model FitnessClub.Models.LoginModel
@{
    ViewBag.Title = "Авторизация";
    Layout = null;

}
<link href="~/Content/bootstrap.css" rel="stylesheet"/>

<script src="~/Scripts/jquery.js"></script>
<script src="~/Scripts/jqueryMin.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<br/>
<br/>
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

   
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2 col-md-offset-3" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2 col-md-offset-3" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-5 col-md-offset-5">
                <input type="submit" value="Войти" class="btn btn-info" />
            </div>
        </div>
    </div>
}
