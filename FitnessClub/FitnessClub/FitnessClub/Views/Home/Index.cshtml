    <script>
        var save = false;
        $('.modalSave').click(function(e) {

            var elements = e.currentTarget.id.split('-');
            var header2 = $("#header-" + elements[1]).html();
            var body2 = $("#body-" + elements[1]).html();
            var res = "";
            while (true) {
                res = body2.replace("<", "#%^").replace(">", "#&*");
                if (res.localeCompare(body2) == 0)
                    break;
                body2 = res;
            }
            if (parseInt(elements) <= 6) {
                $.post(
                    '@Url.Action("SetInformationHeader", "Information")',
                    {
                        id: elements[1],
                        header: header2
                    }
                );
            }
            $.post(
                '@Url.Action("SetInformationBody", "Information")',
                {
                    id: elements[1],
                    bodyText: body2
                }
            );
        });

    </script>
