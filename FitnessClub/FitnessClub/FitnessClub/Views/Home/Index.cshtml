<script>

    var elements = [$("#navbar"), $('#about'), $('#services'), $('#schedule'), $('#team'), $('#price')];
    var elementsScroll = [$("#hidden"), $('#aboutScroll'), $('#servicesScroll'), $('#scheduleScroll'), $('#teamScroll'), $('#priceScroll')];
    var activeElement = 0;
    var enable = true;
    var newActiveElement = 0;
    var navbar = $("#navbar");
    $(window).scroll(function() {
        var w = $(this);
        elements.forEach(function(item, i, elements) {
            if (w.scrollTop() > (item.offset().top - w.height() + 4 * navbar.height())) {
                newActiveElement = i;
            }
        });
        if (activeElement != newActiveElement)
            enable = true;
        console.log(activeElement + "\n" + newActiveElement + "\n" + enable);

        if (enable == true) {
            for(var i = 0;i< elementsScroll.length;i++){
                elementsScroll[i].removeClass("active");
            }
            elementsScroll[newActiveElement].addClass("active");
            enable = false;
            activeElement = newActiveElement;
        }
    });
</script>

